{
  "name": "vite-plugin-lint",
  "version": "1.0.1",
  "description": "ESLint and StyleLint plugin for vite.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "dev": "yarn build -- --watch src",
    "build": "tsup src/index.ts --dts --format esm,cjs"
  },
  "author": "Xiaolin Zhu",
  "license": "MIT",
  "keywords": [
    "eslint",
    "stylelint",
    "vite-plugin"
  ],
  "peerDependencies": {
    "vite": "^2.0.0"
  },
  "dependencies": {
    "@rollup/pluginutils": "^4.1.1",
    "eslint": "^7.32.0",
    "stylelint": "^13.13.1"
  },
  "devDependencies": {
    "@types/eslint": "^7.28.0",
    "@types/node": "^16.9.0",
    "@types/stylelint": "^13.13.2",
    "@typescript-eslint/eslint-plugin": "^4.31.0",
    "@typescript-eslint/parser": "^4.31.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "prettier": "^2.3.2",
    "tsup": "^4.14.0",
    "typescript": "^4.4.2",
    "vite": "^2.5.6"
  }
}
