{
    "compilerOptions": {
        "target": "ESNext",
        "module": "CommonJS",
        "moduleResolution": "Node",
        "sourceMap": true,
        "rootDir": "src",
        "outDir": "dist",
        "declaration": true,
        "strict": true,
        "allowSyntheticDefaultImports": true,
        "importHelpers": true,
        "lib": ["ESNext", "dom"]
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
}
